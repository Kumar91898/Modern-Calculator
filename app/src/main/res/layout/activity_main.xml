<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="0"
        android:textColor="@color/calculation"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blackish"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <Button
                android:id="@+id/ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/ripple_effect_silver"
                android:text="AC"
                android:textColor="#A5A5A5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/del"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_silver"
                android:text="DELL"
                android:textColor="#A5A5A5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/div"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_blue"
                android:text="/"
                android:textColor="#339DFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_blue"
                android:text="*"
                android:textColor="#339DFF"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/ripple_effect_blackish"
                android:text="7"
                android:textColor="#29A8FF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_blackish"
                android:text="8"
                android:textColor="#29A8FF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_blackish"
                android:text="9"
                android:textColor="#29A8FF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ripple_effect_blue"
                android:text="-"
                android:textColor="#339DFF"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/four"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="4"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/five"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="5"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/six"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="6"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/one"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="1"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/two"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="2"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/three"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="3"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="164dp"
                        android:layout_height="72dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="0"
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/dot"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/ripple_effect_blackish"
                        android:text="."
                        android:textColor="#29A8FF"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="6dp">

                <Button
                    android:id="@+id/plus"
                    android:layout_width="68dp"
                    android:layout_height="124dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ripple_effect_blue"
                    android:text="+"
                    android:textColor="#29A8FF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="68dp"
                    android:layout_height="124dp"
                    android:background="@drawable/ripple_effect"
                    android:text="="
                    android:textColor="#B2DAFF"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>